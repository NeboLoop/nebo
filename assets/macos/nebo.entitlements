<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow accessing user-selected files (file open/save dialogs) -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>
	<!-- Allow reading/writing within the user's home directory -->
	<key>com.apple.security.files.downloads.read-write</key>
	<true/>
	<!-- Network access (server, API calls) -->
	<key>com.apple.security.network.client</key>
	<true/>
	<key>com.apple.security.network.server</key>
	<true/>
	<!-- Microphone for voice input -->
	<key>com.apple.security.device.audio-input</key>
	<true/>
	<!-- Camera for video capture -->
	<key>com.apple.security.device.camera</key>
	<true/>
	<!-- AppleEvents for controlling Music, Calendar, Reminders, etc. -->
	<key>com.apple.security.automation.apple-events</key>
	<true/>
	<!-- Accessibility for UI automation -->
	<key>com.apple.security.personal-information.addressbook</key>
	<true/>
	<key>com.apple.security.personal-information.calendars</key>
	<true/>
</dict>
</plist>
